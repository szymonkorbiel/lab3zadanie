@model WebMvc1.Models.NameFormModel

@{
    ViewData["Title"] = "User name:";
}

@{
    void ShowUserName(string name, int repeat)
    {
        for (int i = 0; i < @repeat; i++)
        {
            @name <br />
        }
    }
}

<div class="row text-center">
    <div class="col-md-12">
        <h1>@ViewData["Title"]</h1>
        <br />
        @{
            ShowUserName(Model.Name, Model.Repeat);
        }
    </div>
</div>